[STATUS]
status=train

[IO]
type=csv
train_file=data/quora/train.csv
text_column=comment_text
label_column=toxic
batch_size=100
val_ratio=0.1
output_dir=egs/kaggle_quora_insincere/models/toxic_models
pretrained_embedding=glove.840B.300d

[MODEL]
type=rnn
rnn_type=gru
hidden_size=200
n_label=2
embedding_size=300
bidirectional=True
dropout_p=0.5
input_dropout_p=0.3
n_encoder_layer=2
attention=True
attention_type=general

[TRAIN]
use_gpu=False
n_epoch=10
learning_rate=0.001
record_step=200
