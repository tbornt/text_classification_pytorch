[STATUS]
status=train

[IO]
type=csv
train_file=data/train.csv
text_column=comment_text
label_column=severe_toxic
batch_size=100
val_ratio=0.1
output_dir=egs/kaggle_toxic/models/severe_toxic_models
fix_length=500

[MODEL]
type=textcnn
n_label=2
